<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_detail">



    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/spacecraftImageDetail"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:layout_height="240dp"
        android:src="@drawable/placeholder" />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/Likebar"
        android:orientation="horizontal"
        android:layout_below="@id/spacecraftImageDetail"
        android:elevation="6dp"
        android:background="#f5f5f5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:id="@+id/likestat"
            android:textSize="12sp"
            android:padding="10dp"

            android:layout_marginLeft="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_thumb_up_black_24dp"
></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/comment"
            android:text="10"
            android:padding="10dp"

            android:layout_toRightOf="@id/likestat"
            android:drawableLeft="@drawable/ic_mode_comment_black_24dp"
            android:layout_marginLeft="20dp"
            android:drawablePadding="10dp"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:padding="10dp"
            android:text="1.4 km"
            android:id="@+id/distance"
            android:drawableLeft="@drawable/ic_local_airport_black_24dp"
            android:drawablePadding="10dp"></TextView>




    </RelativeLayout>





        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/layoutnama"
            android:layout_margin="6dp"
            android:elevation="4dp"
            android:layout_below="@id/Likebar"
            android:background="@drawable/rounded_corner"
            android:layout_height="wrap_content"
            android:weightSum="1">



            <TextView
                android:id="@+id/nameTxtDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:text="Name"
                android:padding="10dp"

                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />





        </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_below="@id/layoutnama"
        android:elevation="4dp"
        android:id="@+id/layoutdes"
        android:layout_margin="6dp"
        android:background="@drawable/rounded_corner"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:id="@+id/descDetailTxt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:text=" Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia laborum. The most-loved of all Enterprise Republic Federation spacecraft, this has a recognition around the world.Its a model of Engineering ingenuinity. .... "
            android:textAppearance="?android:attr/textAppearanceLarge"
            />

    </LinearLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_below="@id/layoutdes"
            android:elevation="4dp"
            android:id="@+id/layrat"
            android:layout_margin="6dp"
            android:background="@drawable/rounded_corner"
            android:layout_height="120dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ratings"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:id="@+id/ratinglabel"
                android:textSize="18sp"
                android:padding="10dp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reviews"
                android:id="@+id/reviewslabel"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:layout_alignParentRight="true"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingTop="10dp"
                android:text="80"
                android:paddingRight="4dp"
                android:layout_toLeftOf="@id/reviewslabel"
                ></TextView>



          <!--  <view
                android:layout_width="500dp"
                android:layout_height="1dp"
                android:background="#eeeeef"
                android:id="@+id/line"
                android:layout_centerHorizontal="true"></view>


         -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Super Recommended!"
                android:textSize="18sp"
                android:layout_marginBottom="25dp"
                android:textAlignment="center"
                android:id="@+id/rating"
                android:layout_marginTop="50dp"
                ></TextView>



            <TextView
                android:id="@+id/d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textStyle="normal"
                 android:textSize="12sp"
                android:layout_alignParentBottom="true"
                android:text="Write a review"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />

        </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_below="@id/layrat"
        android:elevation="4dp"
        android:id="@+id/laybot"
        android:layout_margin="6dp"
        android:background="@drawable/rounded_corner"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place Info"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="10dp"></TextView>

        <TextView
            android:id="@+id/addresslabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="12sp"
            android:textStyle="normal"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_home_black_24dp"
            android:text="Address"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jl Simaja Selatan no 79, Kesambi Cirebon"
            android:paddingLeft="34dp"
            android:id="@+id/address"></TextView>
        <TextView
            android:id="@+id/phonelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="12sp"
            android:textStyle="normal"
            android:text="Phone"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_phone_black_24dp"

            android:textAppearance="?android:attr/textAppearanceLarge"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="082117414268"
            android:textColor="@color/colorAccent"
            android:paddingLeft="34dp"
            android:id="@+id/phone"></TextView>
        <TextView
            android:id="@+id/Websitelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="12sp"
            android:textStyle="normal"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_public_black_24dp"

            android:text="Website"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.Facebook.com"
            android:textColor="@color/colorAccent"
            android:paddingLeft="34dp"
            android:id="@+id/web"></TextView>
        <TextView
            android:id="@+id/emaillabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="12sp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_email_black_24dp"


            android:textStyle="normal"
            android:text="Email"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ibalmaulana9@gmail.com"
            android:textColor="@color/colorAccent"
            android:paddingLeft="34dp"
            android:paddingBottom="10dp"
            android:id="@+id/email"></TextView>

    </LinearLayout>

</RelativeLayout>
